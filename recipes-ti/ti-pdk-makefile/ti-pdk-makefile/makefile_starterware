
starterware: starterware_boot starterware_libs starterware_apps

STARTERWARE_PLATFORM = __STARTERWARE_PLATFORM__
STARTERWARE_PROFILES = debug release
STARTERWARE_BOOTMODES = __STARTERWARE_BOOTMODES__
STARTERWARE_APPS = __STARTERWARE_APPS__

starterware_boot:
	for bootmode in $(STARTERWARE_BOOTMODES); do \
		for profile in $(STARTERWARE_PROFILES); do \
			$(MAKE) -C ./ti/starterware bootloader \
				BUILD_CFG=boot \
				BOOTMODE=$$bootmode \
				PLATFORM=$(STARTERWARE_PLATFORM) \
				PROFILE=$$profile \
				KW_BUILD=no; \
		done \
	done

starterware_libs:
	for profile in $(STARTERWARE_PROFILES); do \
		$(MAKE) -C ./ti/starterware \
			PROFILE=$$profile \
			PLATFORM=$(STARTERWARE_PLATFORM) \
			KW_BUILD=no; \
	done

starterware_apps:
	for app in $(STARTERWARE_APPS); do \
		for profile in $(STARTERWARE_PROFILES); do \
			$(MAKE) -C ./ti/starterware $$app \
				PROFILE=$$profile \
				PLATFORM=$(STARTERWARE_PLATFORM) \
				KW_BUILD=no; \
		done \
	done

starterware_clean:
	$(MAKE) -C ./ti/starterware clean KW_BUILD=no
